<p id="notice"><%= notice %></p>

<h1>Flats</h1>

<%= link_to 'New Flat', new_flat_path, class: 'bi btn btn-outline-danger btn-lg' %>
<%= link_to 'back', root_path, class: 'bi btn btn-outline-danger btn-lg'  %>

<div class="cards-flats">
  <% @flats.each do |flat| %>
    <!-- <div class="row"> -->
      <div class="card-flat">
        <% flat.photos.each do |photo| %>
          <%= cl_image_tag photo.key %>
        <% end %>
        <h2><%= flat.name %></h2>
        <h3><%= flat.location %></h3>
        <p><%= link_to 'Show', flat %></p>
        <p><%= link_to 'Edit', edit_flat_path(flat) %></p>
        <p><%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    <!-- </div> -->
  <% end %>
</div>


<br>
<div class="info_block">
  <div class="info_text">
    <h1>Here is your map</h1>
  </div>
  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>



