

<%= link_to 'back', root_path, class: 'bi btn btn-outline-danger btn-lg'  %>

<div class="container d-flex">
  <div class="flats">
    <% @flats.each do |flat| %>
      <div class="card-location">
        <% flat.photos.each do |photo| %>
          <%= cl_image_tag photo.key %>
        <% end %>
        <h2><%= flat.name %></h2>
        <h3><%= flat.location %></h3>
        <p><%= link_to 'Show', flat %></p>
        <% if policy(@flat).edit? %>
        <p><%= link_to 'Edit', edit_flat_path(flat) %></p>
        <% end %>
        <% if policy(@flat).delete? %>
        <p><%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="infoblock">
    <div class="mapcontainer">
      <div
        id="map"
        style="width: 100%;
        height: 800px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>
  </div>
</div>


