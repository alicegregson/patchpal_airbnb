

<%= link_to 'back', root_path, class: 'bi btn btn-outline-danger btn-lg'  %>

<div class="container d-flex">
  <div class="flats">
    <% @flats.each do |flat| %>
      <div class="card-location">
        <% flat.photos.each do |photo| %>
          <%= cl_image_tag photo.key %>
        <% end %>
        <h4><%= link_to flat.name, flat, class: "homepage-button" %></h4>
        <h3><%= flat.location %></h3>
      </div>
    <% end %>
  </div>

  <div class="infoblock">
    <div class="mapcontainer">
      <div
        id="map"
        style="width: 100%;
        height: 800px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>
  </div>
</div>


